journal = {Conservation Biology},
keywords = {Lavigeria,Mcintyre2005,crab,life history,parasitism,predation,trematode},
mendeley-tags = {Mcintyre2005},
number = {1},
pages = {171},
title = {{Individual- and Assemblage-Level Effects of Anthropogenic Sedimentation on Snails in Lake Tanganyika}},
